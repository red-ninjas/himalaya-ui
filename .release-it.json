{
  "git": {
    "commit": true,
    "commitMessage": "chore: release v${version}",
    "tag": true,
    "tagName": "v${version}",
    "push": true
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  },
  "hooks": {
    "after:bump": "npm run release"
  }
}